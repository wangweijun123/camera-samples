<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_container"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@color/preview_mock"
            android:id="@+id/header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:background="@color/preview_mock" />
            <!--相机裁剪区域-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/cropContainer">
                <ImageView
                    android:id="@+id/cropIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_passport_front" />
                <TextView
                    android:id="@+id/arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FCD535"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>


            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:background="@color/preview_mock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/preview_mock"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back side of ID Card"
                android:textColor="#EAECEF"
                android:textSize="20sp"
                android:layout_marginTop="32dp"
                android:id="@+id/camera_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place the Back of the ID card in the frame"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:id="@+id/camera_desc"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>